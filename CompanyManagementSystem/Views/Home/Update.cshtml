@model CompanyManagementSystem.Models.Company

@{
    ViewData["Title"] = "Update";
}

<h1>AddCategory</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" id="formAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" id="Id" />
                <span asp-validation-for="Id" class="text-danger" id="Id"></span>
            </div>
            <div></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="Name" />
                <span asp-validation-for="Name" class="text-danger" id="Name"></span>
            </div>
            <div></div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" id="Address" />
                <span asp-validation-for="Address" class="text-danger" id="Address"></span>
            </div>
            <div></div>
            <div></div>
            <p></p>
            <div class="form-group">
                <input type="button" value="Update" class="btn btn-primary" id="button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#button").click(function () {
                var Id = $("#Id").val();
                var Name = $("#Name").val();
                var Address = $("#Address").val();

                if (Name.length == 0) {
                    document.getelementbyid("Name").innerhtml = "please enter company Name";
                    return false;
                }
                var data = $("#formAction").serialize();

                $.ajax({
                    url: "/Home/Update",
                    data: data,
                    type: "POST",
                    success: function (data) {
                        alert(data);

                    },
                    error: function (data) {
                        alert(data.Id)
                    },
                });
            });
        });
    </script>
}
